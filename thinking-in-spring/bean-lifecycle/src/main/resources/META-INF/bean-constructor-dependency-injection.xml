<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean class="thinking.in.spring.bean.lifecycle.MyInstantiationAwareBeanPostProcessor"/>

    <bean id="userHolder" class="thinking.in.spring.bean.lifecycle.UserHolder" autowire="constructor" init-method="init" destroy-method="doDestroy">
        <property name="description" value="The user holder"/>
    </bean>
</beans>